<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <fx>
   
   
   <!-- Engine 1 exterior-->

<prop1>
	<name>propeller1</name>
	<mode>looped</mode>
	<path>Aircraft/Y12B/Sounds/fullpower.wav</path>
	<condition>
		<and>
			<greater-than>
			<property>controls/engines/engine[0]/throttle</property>
			<value>0.01</value>
			</greater-than>
			
			<not>
			<property>sim/current-view/internal</property>
			</not>
		</and>
	</condition>
	<volume>
		<property>controls/engines/engine[0]/throttle</property>
		<factor>0.6</factor>
		<offset>0.4</offset>
	</volume>
	<pitch>
		 <property>controls/engines/engine[0]/throttle</property>
		 <factor>1.1</factor>
		 <offset>0.5</offset>
	</pitch>
	<position>
		<x>-6</x>
		<y>-2.6</y>
		<z>2.33</z>
	</position>
	<reference-dist>2.0</reference-dist>
	<max-dist>1000.0</max-dist>
</prop1>

 <!-- Engine 1 interiour sound-->
<prop1-int>
	<name>propeller1-int</name> 
	<mode>looped</mode>
	<path>Aircraft/Y12B/Sounds/fullpower-int.wav</path>
	<condition>
		<and>
			<greater-than>
			<property>controls/engines/engine[0]/throttle</property>
			<value>0.01</value>
			</greater-than>
			
			<property>sim/current-view/internal</property>
		</and>
	</condition>
	<volume>
		<property>controls/doors/door0/position-norm</property>
		<factor>0.6</factor>
		<offset>0.3</offset>
	</volume> 
	<volume>
		<property>controls/engines/engine[0]/throttle</property>
		<factor>0.3</factor>
	</volume>
	<pitch>
		 <property>controls/engines/engine[0]/throttle</property>
		 <factor>1.1</factor>
		 <offset>0.5</offset>
	</pitch>
	<position>
		<x>-6</x>
		<y>-2.6</y>
		<z>2.33</z>
	</position>
	<reference-dist>2.0</reference-dist>
	<max-dist>40.0</max-dist>
</prop1-int>


<!-- Engine 2 external -->
        <prop2>
            <name>propeller2</name>
           
            <mode>looped</mode>
            <path>Aircraft/Y12B/Sounds/fullpower.wav</path>
            <property>sim/sound/engine[1]</property>
            <condition>
            <and>
                    <greater-than>
                        <property>controls/engines/engine[1]/throttle</property>
                        <value>0.01</value>
                    </greater-than>
                    <not>
                        <property>sim/current-view/internal</property>
                    </not>
               </and>
            </condition>
            <volume>
                <property>controls/engines/engine[1]/throttle</property>
                <factor>0.6</factor>
                <offset>0.4</offset>
            </volume>
            <pitch>
                <property>controls/engines/engine[1]/throttle</property>
                <factor>1.1</factor>
                <offset>0.5</offset>
            </pitch>
            <position>
                <x>-6</x>
                <y>2.6</y>
                <z>2.33</z>
            </position>
             <reference-dist>2.0</reference-dist>
            <max-dist>1000.0</max-dist>
        </prop2>
<!-- Engine 2 internal -->
        <prop2-int>
            <name>propeller2-int</name>
           
            <mode>looped</mode>
            <path>Aircraft/Y12B/Sounds/fullpower-int.wav</path>
            <property>sim/sound/engine[1]</property>
            <condition>
					<and>
                    <greater-than>
                        <property>controls/engines/engine[1]/throttle</property>
                        <value>0.01</value>
                    </greater-than>
                   
                    <property>sim/current-view/internal</property>
                 </and>
            </condition>
            <volume>
                <property>controls/engines/engine[1]/throttle</property>
                <factor>0.3</factor>
            </volume>
             <volume>
						<property>sim/multiplay/generic/float</property>
						<factor>1</factor>
			</volume>
            <pitch>
                <property>controls/engines/engine[1]/throttle</property>
                <factor>1.1</factor>
                <offset>0.5</offset>
            </pitch>
            <position>
                <x>-6</x>
                <y>2.6</y>
                <z>2.33</z>
            </position>
             <reference-dist>2.0</reference-dist>
            <max-dist>40.0</max-dist>
        </prop2-int>
