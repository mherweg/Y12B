                                      <!--   DOORS  -->

  <!-- Cabin DOOR wind  - not via MP ? -->
        <door>
            <name>cabin_door wind</name>
            <mode>looped</mode>
            <path>/Sounds/wind1.wav</path>
             <condition>
				
                    <greater-than>
                    <property>sim/multiplay/generic/float</property>
                    <value>0.0</value>
                    </greater-than>
                    
            </condition>
            <volume>
                <property>controls/engines/engine/throttle</property>
                <factor>2</factor>
            </volume>
            <volume>
                <property>sim/multiplay/generic/float</property>
                <factor>1</factor>
            </volume>
            <position>
                <x>-1</x>
                <y>-1.0</y>
                <z>2.5</z>
            </position>
            <reference-dist>0.5</reference-dist>
            <max-dist>50.0</max-dist>
        </door>

		<door>
            <name>cabin_door moving</name>
            <mode>looped</mode>
            <path>Aircraft/Y12B/Sounds/rumble.wav</path>
            <condition>
				<and>
                    <less-than>
                    <property>sim/multiplay/generic/float</property>
                    <value>1.0</value>
                    </less-than>
                    
                    <greater-than>
                    <property>sim/multiplay/generic/float</property>
                    <value>0.0</value>
                    </greater-than>
                </and>
            </condition>
            <volume>
                <factor>0.7</factor>
            </volume>
            
            <position>
                <x>-3</x>
                <y>-1.0</y>
                <z>2.5</z>
            </position>
            <reference-dist>0.5</reference-dist>
            <max-dist>100.0</max-dist>
        </door>



  <!-- cabin-cockpit DOOR  -->

        <door>
            <name>ccdoor moving</name>
            <mode>looped</mode>
            <path>Aircraft/Y12B/Sounds/rumble.wav</path>
            <condition>
				<and>
                    <less-than>
                    <property>sim/multiplay/generic/float[1]</property>
                    <value>1.0</value>
                    </less-than>
                    
                    <greater-than>
                    <property>sim/multiplay/generic/float[1]</property>
                    <value>0.0</value>
                    </greater-than>
                </and>
            </condition>
            <volume>
                <factor>0.7</factor>
            </volume>
             <pitch>
                <factor>1.5</factor>
            </pitch>
            <position>
                <x>-6</x>
                <y>0.0</y>
                <z>2.5</z>
            </position>
            <reference-dist>0.5</reference-dist>
            <max-dist>100.0</max-dist>
        </door>

		<readylight>
            <name>ready-signal</name>
            <path>Sounds/dhc6-alarm.wav</path>
            <condition>
                <equals>
                    <property>sim/multiplay/generic/int[0]</property>
                    <value>2</value>
                </equals>
            </condition>
             <position>
                <x>-3</x>
                <y>0.0</y>
                <z>2.5</z>
            </position>
            <reference-dist>1.0</reference-dist>
            <max-dist>200.0</max-dist>
        </readylight>

		<jumplight>
            <name>jump-signal</name>
            <path>Sounds/dhc6-cabinalert.wav</path>
            <condition>
                <equals>
                    <property>sim/multiplay/generic/int[0]</property>
                    <value>3</value>
                </equals>
            </condition>
             <position>
                <x>-3</x>
                <y>0.0</y>
                <z>2.5</z>
            </position>
            <reference-dist>1.0</reference-dist>
            <max-dist>200.0</max-dist>
        </jumplight>



    </fx>

</PropertyList>
